{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "lib": ["esnext"],
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "allowUnusedLabels": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["src/**/*"]
}
